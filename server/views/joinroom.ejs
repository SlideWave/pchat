<% include header %>

    <div class="row">
        <div class="col-lg-12">
              <form class="form-inline form-newroom" role="form" method="post">
                <div class="form-group">
                    <input name="roomname" type="text" id="inputRoom" class="form-control"
                        placeholder="Room to join" autocorrect="off" required autofocus>
