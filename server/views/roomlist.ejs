<% include header %>

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-map-marker fa-fw"></i> Public Chatroom List
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                            <tr>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rooms.forEach(function(room, index) { %>
                            <tr>
                                <td>
                                    <a href="/chat/tryroom/<%= room.title %>"><%= room.title %></a>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.col-lg-4 (nested) -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.panel-body -->
</div>
<!-- /.panel -->

<% include footer %>
